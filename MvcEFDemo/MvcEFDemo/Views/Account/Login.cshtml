@{
    ViewBag.Title = "Login";
}
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<style type="text/css">
    .login {
        width: 600px;
        margin: 0 auto;
    }
</style>
<div class="login">
    <div class="login-state">
        @ViewBag.LoginState
    </div>
    <div class="login-content">
        <div class="bd-example">
            <form action="/account/login" method="post">
                <div class="form-group">
                    <label for="exampleInputEmail1">Email address</label>
                    <input type="email" class="form-control" id="exampleInputEmail" name="exampleInputEmail" aria-describedby="emailHelp" placeholder="Enter email">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" class="form-control" id="exampleInputPassword" name="exampleInputPassword" placeholder="Password">
                </div>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label" for="exampleCheck1">Check me out</label>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>